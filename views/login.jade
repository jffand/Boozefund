extends layout

block content
	.container
		.row
		.col-md-4.col-md-offset-4
			.well
				#page-header.text-center.booze-heading 
					h1 Boozefund
				form(action="/" method="post").form-horizontal#login
						fieldset
							.form-group
								label(for="username").col-md-3.control-label username
								.col-md-9
								input(type="text" name="username" placeholder="User name").form-control#username
							.form-group
								label(for="password").col-md-3.control-label Password
								.col-md-9
								input(type="password" name="pass" placeholder="Password").form-control#pass
							.form-group.text-center
								button.btn.btn-primary.btn-lg(type="submit") Go
							p <a href='/register'>register
						#errorbox
						#successbox
							if(success)
								.alert.alert-success
									p=success
	script(src='/javascripts/loginFormControl.js')